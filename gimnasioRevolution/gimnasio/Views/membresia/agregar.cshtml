@model membresiaModel

@{

    Layout = null;

}

<html>

<head>

    <!-- css -->
    <link href="~/css/css.css" rel="stylesheet" />
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body style="background-color: #d8d9dbff;">


    <div class="container-fluid">

        <div class="col-md-12">

            <div class="row">

                <nav style="background-color: #202123; height: 100px; justify-content: center; text-align: center;">

                    <div class="container-fluid">

                        <h1 style="color: white; margin-top: 25px; font-size: 2rem;">Iron Revolution Center</h1>

                    </div>

                </nav>

            </div>

        </div>

        <div class="container-fluid">

            <div class="row">

                <div class="col-md-12" style="height: 25px;"></div>

                <div class="col-md-4"></div>

                <div class="col-md-5">

                    <div class="card" style="padding: 20px; max-width: 600px; margin: auto;">
                        <form asp-action="agregar" asp-controller="membresia" method="post">

                            <div class="row g-3">

                                <div class="col-md-12">
                                    <label class="form-label">Membresía:</label>
                                    <input asp-for="membresia" type="text" class="form-control">
                                </div>

                                <div class="col-md-12">
                                    <label class="form-label">Duración:</label>
                                    <input asp-for="duracion" type="number" class="form-control" required>
                                </div>

                                <div class="col-md-12">
                                    <label class="form-label">Precio:</label>
                                    <input asp-for="precio" type="number" class="form-control" required>
                                </div>

                                <div class="col-md-2 mt-3">
                                    <button type="submit" class="btn btn-success">Guardar</button>
                                </div>

                                <div class="col-md-2 mt-3" style="margin-left:20px">
                                    <a asp-action="listarMembresias" asp-controller="membresia" class="btn btn-danger">Cancelar</a>
                                </div>

                            </div>

                        </form>

                    </div>

                </div>

            </div>

            <div class="col-md-3"></div>

        </div>

    </div>

</body>

</html>

