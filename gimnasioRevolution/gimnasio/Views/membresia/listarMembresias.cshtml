@model List<membresiaModel>

@{
    Layout = null;
}

<style>
    /* navbar */
    .menu {
        /* eliminar decoración de texto */
        text-decoration: none;
        /* tamaño de fuente */
        font-size: 18px;
        /* color de texto */
        color: white;
        /* se vuelven bloques */
        display: block;
        /* espacio entre si */
        margin-top: 30px;
        /* alinear el texto al centro */
        text-align: center;
    }

        /* -- sliderbar para las opciones cuando pases el mouse por encima -- */
        .menu a:hover {
            /* Color de fondo */
            background-color: #575757;
            /* Color del texto */
            color: white;
        }
</style>
<!DOCTYPE html>
<html>

<head>

    <!-- css -->
    <link href="~/css/css.css" rel="stylesheet" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body style="background-color: #d8d9dbff;">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/js.js"></script>
    <!-- contenedor -->
    <div class="container-fluid">

        <div class="row">

            <!-- columna izquierda -->
            <div class="col-md-2" style="background-color: #202123; height: 633px;">

                <!-- empresa -->
                <h6 class="ironCenter">Iron Revolution Center</h6>

                <!-- navegador -->
                <a asp-action="home" asp-controller="administrador" class="menu">Home</a>
                <a asp-action="listarMembresias" asp-controller="membresia" class="menu">Administrar membresias</a>

            </div>

            <div class="col-md-10">

                <!-- titulo -->
                <div class="row">

                    <!-- header -->
                    <nav class="navbar navbar-expand-sm" style="background-color: white;">

                        <div class="container-fluid">

                            <!-- nombre centro -->
                            <h1 class="navbar-brand">Administrar</h1>
                            <a asp-action="agregar" asp-controller="membresia" class="btn btn btn-success btn-sm">Agregar</a>

                        </div>

                    </nav>

                </div>

                <div class="row">

                    <div class="col-md-12" style="height: 25px;"></div>

                    <div class="col-md-2"></div>

                    <div class="col-md-8">

                        <div class="row">

                            <div class = "card">

                            <div class="col-md-12" style="height: 25px;"></div>

                            <div class="container-listar">

                                <table class="table table-bordered">

                                    <thead>

                                        <tr>

                                            <th>ID</th>
                                            <th>Membresia</th>
                                            <th>Duración</th>
                                            <th>Precio</th>
                                            <th></th>
                                            <th></th>

                                        </tr>

                                    </thead>

                                    <tbody>

                                        @foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>@item.idMembresia</td>
                                                <td>@item.membresia</td>
                                                <td>@item.duracion</td>
                                                <td>@item.precio</td>
                                                <td>
                                                    <a asp-action="modificar" asp-controller="membresia" method="get" asp-route-idMembresia="@item.idMembresia" class="btn btn-warning btn-sm">Modificar</a>
                                                </td>
                                                <th>
                                                    <a asp-action="eliminar" asp-controller="membresia" asp-route-idMembresia="@item.idMembresia" class="btn btn-danger btn-sm">Eliminar</a>
                                                </th>
                                            </tr>
                                        }

                                    </tbody>

                                </table>

                            </div>

                        </div>

                    </div>

                    </div>

                    <div class="col-md-2"></div>

                </div>

            </div>

        </div>

    </div>

</body>
</html>