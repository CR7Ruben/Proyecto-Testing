@model membresiaModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <!-- css -->
    <link href="~/css/css.css" rel="stylesheet" />
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body style="background-color: #d8d9dbff;">


    <div class="container-fluid">

        <div class="col-md-12">

            <div class="row">

                <nav style="background-color: #202123; height: 100px; justify-content: center; text-align: center;">

                    <div class="container-fluid">

                        <h1 style="color: white; margin-top: 25px; font-size: 2rem;">Iron Revolution Center</h1>

                    </div>

                </nav>

            </div>

        </div>

        <div class="container-fluid">

            <div class="row">

                <div class="col-md-12" style="height: 25px;"></div>

                <div class="col-md-4"></div>

                <div class="col-md-5">

                    <div class="card">

                        <div class="card-body">

                            <form asp-action="eliminar" asp-controller="membresia" method="post">

                                <input asp-for="idMembresia" type="hidden" class="form-control">

                                <div class="alert alert-danger" role="alert">
                                    ¿Desea eliminar: @Html.DisplayTextFor(m => m.membresia)?
                                </div>

                                <button type="submit" class="btn btn-danger">Eliminar</button>

                                <a asp-action="listarMembresias" asp-controller="membresia" class="btn btn-success">Volver</a>

                            </form>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

</body>
</html>

