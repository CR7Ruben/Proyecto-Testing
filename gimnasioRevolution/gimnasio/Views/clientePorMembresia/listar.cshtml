@model List<clientePorMembresiaModel>

@{
    Layout = null;
}

<style>

body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
}

.container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

.card {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    margin-top: 20px;
}

.form-control {
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #ddd;
    width: 100%;
    box-sizing: border-box;
}

.btn {
    display: inline-block;
    padding: 10px 15px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
}

.btn:hover {
    background-color: #0056b3;
}

.custom-dropdown {
    width: 100%;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #ddd;
    background-color: #fff;
    appearance: none;
    cursor: pointer;
}

.custom-dropdown:focus {
    outline: none;
    border-color: #007bff;
}

.table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

.table thead {
    background-color: #007bff;
    color: white;
}

.table th {
    padding: 10px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

.table td {
    padding: 10px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

</style>


<!DOCTYPE html>
<html>

<head>

    <!-- css -->
    <link href="~/css/css.css" rel="stylesheet" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body style="background-color: #d8d9dbff;">

    <!-- contenedor -->
    <div class="container-fluid">

        <div class="col-md-12">

            <!-- titulo -->
            <div class="row">

                <!-- header -->
                <nav style="background-color: #202123; height: 100px; justify-content: center; text-align: center;">

                    <div class="container-fluid">

                        <!-- nombre centro -->
                        <h1 style="color: white; margin-top: 25px; font-size: 2rem;">Iron Revolution Center</h1>

                    </div>

                </nav>

            </div>

        </div>

        <div class="container-fluid">

            <div class="row">

                <div class="col-md-12" style="height: 25px;"></div>

                <div class="card">

                    <form method="post" action="Listar">
                        <div class="form-group d-flex">

                            <div class="col-md-2 mt-2">
                                @Html.DropDownList("membresia", new SelectList(ViewBag.membresia, "Value", "Text", ViewBag.membresiaSeleccionada), "-- Seleccione --", new { @class = "form-control custom-dropdown", @onchange = "this.form.submit();" })
                            </div>

                            <div class="col-md-2 mt-2" style="margin-left:15px">
                                <a asp-action="home" asp-controller="administrador" class="btn btn-primary" style="width: 100%;">Volver</a>
                            </div>
                        </div>

                        <div class="table-responsive">

                            <table class="table mt-3">

                                <thead>

                                    <tr>

                                        <th>ID Cliente</th>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Membresía</th>
                                        <th>Fecha de Fin</th>

                                    </tr>

                                </thead>

                                <tbody>

                                    @foreach (var cliente in Model)
                                    {

                                        <tr>

                                            <td>@cliente.idCliente</td>
                                            <td>@cliente.nombre</td>
                                            <td>@cliente.apellido</td>
                                            <td>@cliente.membresia</td>
                                            <td>@cliente.fechaFin</td>

                                        </tr>

                                    }
                                </tbody>

                            </table>

                        </div>

                    </form>

                </div>

            </div>

        </div>

    </div>

</body>
</html>
