@model administradorModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    
    <head>
        
        <!-- css -->
        <link href="~/css/css.css" rel="stylesheet" />

        <!-- Bootstrap -->
        <link href = "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel = "stylesheet">
        <script src = "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    </head>

    <body style = "background-color: #d8d9dbff;">
        
        <!-- contenedor -->
        <div class = "container-fluid">

            <div class = "col-md-12">

                <!-- titulo -->
                <div class = "row">

                    <!-- header -->
                    <nav style = "background-color: #202123; height: 100px; justify-content: center; text-align: center;">

                        <div class = "container-fluid">
                                
                            <!-- nombre centro -->
                            <h1 style = "color: white; margin-top: 25px; font-size: 2rem;">Iron Revolution Center</h1> 
                              
                        </div>
                            
                    </nav>

                </div>

            </div>
            
            <!-- contenedor -->
            <div class = "container-fluid">

                <div class = "row">

                    <div class = "col-md-12" style = "height: 100px;"></div>

                    <div class = "col-md-4"></div>

                    <div class = "col-md-4">

                        <!-- principal -->
                        <div class = "mainRegistrarse">
                            <form asp-action = "registrarAdministrador" asp-controller = "administrador" method = "post">

                            <h1 style = "font-size: 2rem; text-align: center;">Registrarse</h1>

                            <label>Usuario:</label>
                            <input type = "text" asp-for = "usuario" class = "form-control" required>

                            <label>Contraseña:</label>
                            <input type="password" asp-for="contrasena" class="form-control" required>

                            <label for = "repetirContraseña">Repetir contraseña:</label>
                            <input type="password" asp-for="repetirContrasena" class="form-control" required>

                            <p>¿Ya estas registrado? <a asp-action = "validacionAdministrador" asp-controller = "administrador">Inicia sesión aqui</a>.</p>

                            <button type = "submit" class = "btn btn-success">Registrarse</button>

                            </form>
                        </div>

                    </div>

                </div>

            </div>

        </div>

    </body>

</html>
