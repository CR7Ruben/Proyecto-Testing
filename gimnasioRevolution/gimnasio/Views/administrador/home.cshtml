@model administradorModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <!-- css -->
    <link href="~/css/css.css" rel="stylesheet" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body style="background-color: #d8d9dbff;">

    <!-- script -->
    <script src="js/funciones.js"></script>

    <!-- contenedor -->
    <div class="container-fluid">

        <div class="col-md-12">

            <!-- titulo -->
            <div class="row">

                <!-- header -->
                <nav style="background-color: #202123; height: 100px; justify-content: center; text-align: center;">

                    <div class="container-fluid">

                        <!-- nombre centro -->
                        <h1 style="color: white; margin-top: 25px; font-size: 2rem;">Iron Revolution Center</h1>

                    </div>

                </nav>

            </div>

        </div>

        <!-- contenedor -->
        <div class="container-fluid">

            <div class="row">

                <div class="col-md-12" style="height: 25px;"></div>

                <div class="col-md-3">
                    <div class="perfilAdmin">

                        <div class="dropdown">

                            <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" style="background-color: white;">Administrador</button>

                            <ul class="dropdown-menu">

                                <li><a class="dropdown-item" asp-action="validacionAdministrador" asp-controller="administrador">Cerrar sesion</a></li>

                            </ul>
                        </div>

                    </div>
                </div>

                <div class="col-md-9"></div>

                <div class="row">

                    <div class="col-md-12" style="height: 20px;"></div>

                    <div class="col-md-2"></div>

                    <div class="col-md-2">

                        <form asp-action="listarClientes" asp-controller="cliente" method="get">
                            <button class="btn-home">Administrar cliente</button>
                        </form>

                    </div>

                    <div class="col-md-2">

                        <form asp-action="listarMembresias" asp-controller="membresia" method="get">
                            <button type = "submit" class="btn-home"> Administrar membresia </button>
                        </form>

                    </div>

                    <div class="col-md-2">

                        <form asp-action="listar" asp-controller="clientePorMembresia">
                            <button class="btn-home"> Clientes por membresia </button>
                        </form>

                    </div>

                    <div class="col-md-2">

                        <form asp-action="consultarviewDetallesCliente" asp-controller="viewDetallesCliente" target="_blank">
                            <button class="btn-home"> Vista </button>
                        </form>

                    </div>

                </div>

            </div>

        </div>

    </div>

</body>

</html>
