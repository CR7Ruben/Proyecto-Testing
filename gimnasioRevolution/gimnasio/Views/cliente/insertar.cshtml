@model clienteModel
@{
    Layout = null;
}

<style>

.container-agregar
{
        background-color: white;
        /* borde */
        border-radius: 5px;
        /* hace una sombra */
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        padding: 25px;
        max-width: 600px;
        width: 100%;
}

</style>

<!DOCTYPE html>

<html>

<head>

    <!-- css -->
    <link href="~/css/css.css" rel="stylesheet" />
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <meta name="viewport" content="width=device-width" />

</head>

<body style="background-color: #d8d9dbff;">


    <div class="container-fluid">

        <div class="col-md-12">

            <div class="row">

                <nav style="background-color: #202123; height: 100px; justify-content: center; text-align: center;">

                    <div class="container-fluid">

                        <h1 style="color: white; margin-top: 25px; font-size: 2rem;">Iron Revolution Center</h1>

                    </div>

                </nav>

            </div>

        </div>

        <div class="container-fluid">

            <div class="row">

                <div class="col-md-12" style="height: 25px;"></div>

                <div class="col-md-3"></div>

                <div class="col-md-6">

                    <form asp-action="insertar" asp-controller="cliente" method="post">

                        <div class="container-agregar">

                            <div class="row">

                                <div class=col-md-1></div>

                                <div class=col-md-10>
                                    <label class="form-label">Foto:</label>
                                    <input asp-for="fotoUrl" type="text" class="form-control">
                                </div>

                                <div class=col-md-1></div>

                                <div class=col-md-1></div>

                                <div class=col-md-10>
                                    <label class="form-label">Nombre:</label>
                                    <input asp-for="nombre" type="text" class="form-control" required>
                                </div>

                                <div class=col-md-1></div>

                                <div class=col-md-1></div>

                                <div class=col-md-10>
                                    <label class="form-label">Apellido:</label>
                                    <input asp-for="apellido" type="text" class="form-control" required>
                                </div>

                                <div class=col-md-1></div>

                                <div class=col-md-1></div>

                                <div class=col-md-10>
                                    <label class="form-label">Celular:</label>
                                    <input asp-for="numTel" type="number" class="form-control" required>
                                </div>

                                <div class=col-md-1></div>

                                <div class=col-md-1></div>

                                <div class=col-md-10>
                                    <label class="form-label">Observaciones:</label>
                                    <textarea asp-for="observaciones" type="text" class="form-control"></textarea>
                                </div>

                                <div class=col-md-1></div>

                                <div class=col-md-1></div>

                                <div class=col-md-10>
                                    <button type="submit" class="btn btn-success" style="width: 100%;">Agregar</button>
                                </div>

                                <div class=col-md-1></div>

                                <div class=col-md-1></div>

                                <div class=col-md-10>
                                    <a asp-action="listarClientes" asp-controller="cliente" class="btn btn-primary mt-3" style="width: 100%;">Volver</a>
                                </div>

                            </div>

                        </div>

                    </form>

                </div>

                <div class="col-md-3"></div>

        </div>
        </div>

    </div>

</body>

</html>
