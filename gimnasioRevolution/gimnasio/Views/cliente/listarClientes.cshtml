@model List<clienteModel>

@{
    Layout = null;
}

<style>

    .container-listar {
        background-color: white;
        /* borde */
        border-radius: 5px;
        /* hace una sombra */
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        padding: 25px;
    }

    /* navbar */
    .menu {
        /* eliminar decoración de texto */
        text-decoration: none;
        /* tamaño de fuente */
        font-size: 18px;
        /* color de texto */
        color: white;
        /* se vuelven bloques */
        display: block;
        /* espacio entre si */
        margin-top: 30px;
        /* alinear el texto al centro */
        text-align: center;
    }   

    /* -- sliderbar para las opciones cuando pases el mouse por encima -- */
    .menu a:hover {
        /* Color de fondo */
        background-color: #575757;
        /* Color del texto */
        color: white;
    }

</style>

<!DOCTYPE html>
<html>

<head>

    <!-- css -->
    <link href="~/css/css.css" rel="stylesheet" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body style="background-color: #d8d9dbff;">

    <!-- contenedor -->
    <div class="container-fluid">

        <div class="row">

            <!-- columna izquierda -->
            <div class="col-md-2" style="background-color: #202123; height: 633px;">

                <!-- empresa -->
                <h6 class="ironCenter">Iron Revolution Center</h6>

                <!-- navegador -->
                <a asp-action="home" asp-controller="administrador" class="menu">Home</a>
                <a asp-action="listarClientes" asp-controller="cliente" class="menu">Administrar clientes</a>

            </div>

            <div class="col-md-10">

                <!-- titulo -->
                <div class="row">

                    <!-- header -->
                    <nav class="navbar navbar-expand-sm" style="background-color: white;">

                        <div class="container-fluid">

                            <!-- nombre centro -->
                            <h1 class="navbar-brand">Administrar</h1>


                            <a asp-action="insertar" asp-controller="cliente" class="btn btn-success btn-sm">Agregar</a>

                        </div>

                    </nav>

                </div>

                <div class="row">

                    <div class="col-md-12" style="height: 25px;"></div>

                    <div class="col-md-11" style="margin-left:40px">

                        <div class="row">

                            <div class="container-listar">

                                <table class="table table-bordered">

                                    <thead>

                                        <tr>

                                            <th>ID</th>
                                            <th>Nombre</th>
                                            <th>Apellido</th>
                                            <th>Celular</th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>

                                        </tr>

                                    </thead>

                                    <tbody>

                                        @foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>@item.idCliente</td>
                                                <td>@item.nombre</td>
                                                <td>@item.apellido</td>
                                                <td>@item.numTel</td>
                                                <td>
                                                    <a class="btn btn-primary btn-sm" asp-action="consultarCliente" asp-controller="cliente" asp-route-idCliente="@item.idCliente">
                                                        Detalles
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-warning btn-sm" asp-action="modificarCliente" asp-controller="cliente" asp-route-idCliente="@item.idCliente">
                                                        Modificar
                                                    </a>
                                                </td>
                                                <th>
                                                    <a class="btn btn-success btn-sm" asp-action="agregarMembresia" asp-controller="detallesCliente" asp-route-idCliente="@item.idCliente">
                                                        Membresía
                                                    </a>
                                                </th>
                                                <th>
                                                    <a class="btn btn-success btn-sm" asp-action="actualizarMembresia" asp-controller="detallesCliente" asp-route-idCliente="@item.idCliente">
                                                        Actualizar membresía
                                                    </a>
                                                </th>
                                                <th>
                                                    <a class="btn btn-danger btn-sm" asp-action="eliminarCliente" asp-controller="cliente" asp-route-idCliente="@item.idCliente">
                                                        Eliminar
                                                    </a>
                                                </th>
                                                
                                            </tr>
                                        }

                                    </tbody>

                                </table>

                            </div>

                        </div>

                    </div>

                    <div class="col-md-2"></div>

                </div>

            </div>

        </div>

    </div>

</body>
</html>