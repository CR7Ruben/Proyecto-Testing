@model clienteModel
@{
    Layout = null;
}

<style>

    .foto {
    /* color del fondo */
    background-color: #FAFDFF;
    /* borde */
    border-radius: 10px;
    /* hace una sombra */
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    /* anchura */
    width: 150px;
    /* altura */
    height: 150px;
    text-align: center;
    align-content: center;
}

.contenido {
    /* color del fondo */
    background-color: #FAFDFF;
    /* borde */
    border-radius: 10px;
    /* hace una sombra */
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    padding: 20px;
}

    .contenido label {
        display: block;
        /* espacio entre si */
        margin-bottom: 10px;
    }

    .contenido textarea {
        width: 100%;
        height: 100px;
        border: 1px solid #dcdcdc;
        border-radius: 5px;
        padding: 10px;
        /* solo puede expandirse en vertical */
        resize: vertical;
    }

.contenido-membresia {
    /* color del fondo */
    background-color: #FAFDFF;
    /* borde */
    border-radius: 10px;
    /* hace una sombra */
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    padding: 20px;
}

    .contenido-membresia label {
        display: block;
        /* espacio entre si */
        margin-bottom: 10px;
    }

/* ---------------------------------------------- */

/* nombre de la empresa */
.ironCenter {

    /* color de letra */
    color: white;
    /* alineación del texto al centro */
    text-align: center;
    /* margen hacia arriba*/
    margin-top: 28px;

}

/* navbar */
.menu {

    /* eliminar decoración de texto */
    text-decoration: none;
    /* tamaño de fuente */
    font-size: 18px;
    /* color de texto */
    color: white;
    /* se vuelven bloques */
    display: block;
    /* espacio entre si */
    margin-top: 30px;
    /* alinear el texto al centro */
    text-align: center;

}

/* -- sliderbar para las opciones cuando pases el mouse por encima -- */
.menu a:hover {

    /* Color de fondo */
    background-color: #575757;
    /* Color del texto */
    color: white;

}

</style>

<!-- css -->
<link href="~/css/css.css" rel="stylesheet" />
<!-- Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<body style="background-color: #d8d9dbff;">

    <!-- contenedor -->
    <div class="container-fluid">

        <div class="row">

            <!-- columna izquierda -->
            <div class="col-md-2" style="background-color: #202123; height: 633px;">

                <!-- empresa -->
                <h6 class="ironCenter">Iron Revolution Center</h6>

                <!-- navegador -->
                <a asp-action="home" asp-controller="administrador" class="menu">Home</a>
                <a asp-action="listarClientes" asp-controller="cliente" class="menu">Administrar Clientes</a>

            </div>

            <div class="col-md-10">

                <!-- titulo -->
                <div class="row">

                    <!-- header -->
                    <nav class="navbar navbar-expand-sm" style="background-color: white;">

                        <div class="container-fluid">

                            <!-- nombre centro -->
                            <h1 class="navbar-brand">Consultar cliente</h1>

                            <!-- estructura formulario -->
                            <form class="d-flex" asp-action="consultarCliente" asp-controller="cliente">

                                <!-- introduccir id cliente -->
                                <input class="form-control me-2" asp-for="idCliente" type="number" placeholder="Buscar">
                                <button class="btn btn-primary" type="submit">Buscar</button>

                            </form>

                        </div>

                    </nav>

                </div>

                <div class="row">

                    <div class="col-md-12" style="height: 25px;"></div>

                    <div class="col-md-1"></div>

                    <div class="col-md-2">

                        <div class="col-md-2">

                            @if (!string.IsNullOrEmpty(Model.fotoUrl))
                            {
                                <img src="@Url.Content("@Model.fotoUrl")" alt="@Model.nombre" class="foto" />
                            }
                            else
                            {
                                <div class="foto"> + </div>
                            }

                        </div>

                    </div>

                    <div class="col-md-1"></div>

                    <div class="col-md-6">

                        <div class="contenido">

                            <label>Nombre: @Model.nombre</label>
                            <label>Apellido: @Model.apellido</label>
                            <label>Número celular: @Model.numTel</label>
                            <label>Observaciones:</label>
                            <textarea>@Model.observaciones</textarea>

                        </div>

                    </div>

                    <div class="col-md-2"></div>

                </div>

            </div>

        </div>

    </div>

</body>